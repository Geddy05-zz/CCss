
@{

}
@section featured {

<script src="~/Scripts/jquery.js"></script>
<script>
	$(function(){
	  $('.drop').click(function(){
		$(this).next('.dropdown').slideToggle();
		$(this).toggleClass('active');
	});

		$(function() {
   		 $("img")
        .click(function() {
				if ($(this).attr("src").indexOf("On") > -1){
					var src = $(this).attr("src").replace('On','');
            		 $(this).attr("src", src);
				}
				else {
					 var src = $(this).attr("src").match(/[^\.]+/) + "On.png";
            		 $(this).attr("src", src);
				}
       		 })
		});
	});



</script>
<div id="wrapper">
    <form id="builder" method="post">
        @using (Html.BeginForm(FormMethod.Post))
        {


            <div class="contentContainer">

                <div class="item">
                    <a class="drop" href="#"><img src="~/Images/processor.png" alt="processor" /></a>
                    <div class="dropdown">
                        <div class="dropdownContainer">

                            <h3>TYPE</h3>

                            @Html.DropDownList("processorTypeResult", ViewData["processorTypeDD"] as List<SelectListItem>)


                            <h3>SNELHEID</h3>

                            @Html.DropDownList("processorClockSpeedResult", ViewData["processorClockSpeedDD"] as List<SelectListItem>)

                            <h3>CORES</h3>


                            @Html.DropDownList("processorCoresResult", ViewData["processorCoresDD"] as List<SelectListItem>)


                        </div><!--end dropdownContainer-->
                    </div><!--end dropdown-->
                </div><!--end item-->

                <div class="item">
                    <a class="drop" href="#"><img src="images/moederbord.png" alt="moederbord" /></a>

                    <div class="dropdown">
                        <div class="dropdownContainer">

                            <h3>GEHEUGENSLOTS</h3>

                            @Html.DropDownList("memorySlotsResult", ViewData["memorySlotsDD"] as List<SelectListItem>)

                        </div><!--end dropdownContainer-->
                    </div><!--end dropdown-->
                </div><!--end item-->

                <div class="item">
                    <a class="drop" href="#"><img src="images/geheugen.png" alt="geheugen" /></a>

                    <div class="dropdown">
                        <div class="dropdownContainer">

                            <h3>SNELHEID</h3>

                            @Html.DropDownList("memorySpeedResult", ViewData["memorySpeedDD"] as List<SelectListItem>)

                        </div><!--end dropdownContainer-->
                    </div><!--end dropdown-->
                </div><!--end item-->

                <div class="item">
                    <a class="drop" href="#"><img src="images/grafischekaart.png" alt="grafischekaart" /></a>

                    <div class="dropdown">
                        <div class="dropdownContainer">

                            <h3>VIDEOGEHEUGEN</h3>

                            @Html.DropDownList("graphicCardSpeedResult", ViewData["graphicCardSpeedDD"] as List<SelectListItem>)

                            <h3>TYPE</h3>

                            @Html.DropDownList("graphicCardTypeResult", ViewData["graphicCardTypeDD"] as List<SelectListItem>)

                        </div><!--end dropdownContainer-->
                    </div><!--end dropdown-->
                </div><!--end item-->



            </div><!--end contenContainer-->

            <div class="contentContainer">


                <div class="item">
                    <a class="drop" href="#"><img src="images/hardeschijf.png" alt="hardeschijf" /></a>

                    <div class="dropdown">
                        <div class="dropdownContainer">

                            <h3>SOORT</h3>

                            @Html.DropDownList("hardDriveTypeResult", ViewData["hardDriveTypeDD"] as List<SelectListItem>)

                            <h3>OPSLAG</h3>

                            @Html.DropDownList("hardDriveCapacityResult", ViewData["hardDriveCapacityDD"] as List<SelectListItem>)

      

                        </div><!--end dropdownContainer-->
                    </div><!--end dropdown-->
                </div><!--end item-->

                <div class="item">
                    <a class="drop" href="#"><img src="images/optischedrives.png" alt="optischedrives" /></a>

                    <div class="dropdown">
                        <div class="dropdownContainer">

                            <h3>CATEGORIE</h3>

                            @Html.DropDownList("opticalDriveCategoryResult", ViewData["opticalDriveCategoryDD"] as List<SelectListItem>)


                        </div><!--end dropdownContainer-->
                    </div><!--end dropdown-->
                </div><!--end item-->

                <div class="item">
                    <a class="drop" href="#"><img src="images/behuizing.png" alt="behuizing" /></a>

                    <div class="dropdown">
                        <div class="dropdownContainer">

                            <h3>VORMFACTOR</h3>

                            @Html.DropDownList("systemUnitFormfactorResult", ViewData["systemUnitFormfactorDD"] as List<SelectListItem>)

                        </div><!--end dropdownContainer-->
                    </div><!--end dropdown-->
                </div><!--end item-->

                <div id="submit">

                    <a href="#"><img src="images/admin.png" alt="admin" /></a>

                    <input type="submit" value="">


                </div><!--end submit-->

            </div><!--end contenContainer-->
        }
    </form>
</div>

}
